<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:padding="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@+id/lay_1"
                android:nextFocusRight="@+id/lay_2"
                android:nextFocusUp="@+id/lay_clear">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_1"
                android:nextFocusRight="@id/lay_3"
                android:nextFocusUp="@id/lay_0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_2"
                android:nextFocusRight="@id/lay_3"
                android:nextFocusUp="@id/lay_next">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_4"
                android:nextFocusRight="@id/lay_5"
                android:nextFocusUp="@id/lay_1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_5"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_4"
                android:nextFocusRight="@id/lay_6"
                android:nextFocusUp="@id/lay_2"
                android:nextFocusDown="@id/lay_8">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_6"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_5"
                android:nextFocusRight="@id/lay_6">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_7"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_7"
                android:nextFocusRight="@id/lay_8"
                android:nextFocusUp="@id/lay_4"
                android:nextFocusDown="@id/lay_clear">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_8"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_7"
                android:nextFocusRight="@id/lay_9"
                android:nextFocusUp="@id/btn_next">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_9"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:layout_marginRight="@dimen/_1sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_8"
                android:nextFocusRight="@id/lay_9"
                android:nextFocusUp="@id/lay_6"
                android:nextFocusDown="@id/lay_next">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_clear"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:nextFocusLeft="@id/lay_clear"
                android:nextFocusRight="@+id/lay_0"
                android:nextFocusUp="@id/lay_7"
                android:nextFocusDown="@id/lay_clear">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/delete" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_0"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusLeft="@id/lay_clear"
                android:nextFocusRight="@id/lay_next"
                android:nextFocusUp="@id/lay_8"
                android:nextFocusDown="@id/lay_0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:elevation="2dp"
                    android:fontFamily="@font/segoe_ui_old"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#ffffffcc"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_next"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/key_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:nextFocusLeft="@id/lay_0"
                android:nextFocusRight="@+id/lay_next"
                android:nextFocusUp="@id/lay_9"
                android:nextFocusDown="@id/lay_next">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_done" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
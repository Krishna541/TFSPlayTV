<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layShadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivLoadMore"
            android:layout_width="130dp"
            android:layout_height="183dp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:src="@drawable/ic_action_more_portrait"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/providerImage"
            android:layout_width="@dimen/dimen_provider"
            android:layout_height="@dimen/dimen_provider"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:src="@color/white" />

        <ImageView
            android:id="@+id/imgFreeContent"
            android:layout_width="@dimen/dimen_provider"
            android:layout_height="@dimen/dimen_provider"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_free"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPoster"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#fff"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivPoster"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_3sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#fff"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLanguage"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/dimens_5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

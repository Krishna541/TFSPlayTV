<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layParent"
    android:layout_width="@dimen/_403sdp"
    android:layout_height="@dimen/_183sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:background="@drawable/bg_home_gradient"
    android:clipToPadding="false"
    android:gravity="center"

    >

    <LinearLayout
        android:id="@+id/layShadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"></LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBanner"
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_180sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_banner"
        android:gravity="center"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="@dimen/_400sdp"
            android:layout_height="@dimen/_180sdp"
            android:background="#180433"
            android:paddingLeft="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <com.bosphere.fadingedgelayout.FadingEdgeLayout
                    android:id="@+id/fading_edge_layout"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_180sdp"
                    app:fel_edge="left"
                    app:fel_size_left="@dimen/_30sdp">

                    <ImageView
                        android:id="@+id/imgBanner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />

                </com.bosphere.fadingedgelayout.FadingEdgeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/_120sdp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/unselected_color"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/movie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtDetail"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/synopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/unselected_color"
                    android:textSize="11sp" />

            </RelativeLayout>


        </FrameLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_160sdp"
    android:layout_height="@dimen/_116sdp"
    android:clipToPadding="false"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/layShadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layParent"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_116sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_116sdp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/ivPoster"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/movie_bg_transperant"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/providerImage"
                    android:layout_width="@dimen/dimen_provider"
                    android:layout_height="@dimen/dimen_provider"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:src="@color/white" />

                <ImageView
                    android:id="@+id/imgFreeContent"
                    android:layout_width="@dimen/dimen_provider"
                    android:layout_height="@dimen/dimen_provider"
                    android:layout_margin="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_free"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivPoster"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivPoster"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/content_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLanguage"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--        <ImageView-->
        <!--            android:id="@+id/ivViewMore"-->
        <!--            android:layout_width="@dimen/_50sdp"-->
        <!--            android:layout_height="@dimen/_50sdp"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:clickable="true"-->
        <!--            android:focusable="true"-->
        <!--            android:src="@drawable/ic_view_more_unselected" />-->

    </RelativeLayout>
</FrameLayout><!--
</LinearLayout>-->
